<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteRule ^(.*)$ public/$1 [L]
</IfModule>

Options -Indexes

	# block files which needs to be hidden, specify .example extension of the file
	<Files ~ "\.(env|json|config.js|md|gitignore|gitattributes|lock)$">
		Order allow,deny
		Deny from all
	</Files>